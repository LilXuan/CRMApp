<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- ScrollView chứa toàn bộ form -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rowbuttonhuyluu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề -->
            <LinearLayout
                android:id="@+id/taonguoilienhe_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/icon_back_size"
                    android:layout_height="@dimen/icon_back_size"
                    android:src="@drawable/arrow_back"/>

                <TextView
                    android:id="@+id/taonguoilienhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taonguoilienhe"
                    android:textSize="@dimen/text_large"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Tab thông tin -->
            <LinearLayout
                android:id="@+id/tabThongTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex4">

                <TextView
                    android:id="@+id/thongtin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtin"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/blue"
                    android:background="@drawable/edittext_line"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/thongtinkhac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinkhac"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/grey"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="48dp" />
            </LinearLayout>

            <!-- Tiêu đề phần thông tin -->
            <LinearLayout
                android:id="@+id/headerThongTin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex4">

                <TextView
                    android:id="@+id/thongtinnguoilienhe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thongtin"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/black" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThongTinChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_basex4">

            <!-- Hàng danh xưng + họ tên đệm -->
                <LinearLayout
                    android:id="@+id/rowdanhxungvahoten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex4"
                    android:weightSum="2">

                    <!-- Dropdown danh xưng -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="@string/danhxung"
                        android:background="@drawable/rounded_input_box"
                        app:endIconMode="dropdown_menu">

                        <AutoCompleteTextView
                            android:id="@+id/actdanhxung"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="@dimen/text_small"
                            android:paddingStart="@dimen/margin_basex2"
                            android:paddingEnd="@dimen/margin_base"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Họ tên đệm -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hovatendem"
                        android:background="@drawable/rounded_input_box">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edthovatendem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:paddingStart="@dimen/margin_base"
                            android:paddingEnd="@dimen/margin_base"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Tên -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/layoutten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_basex4"
                    android:hint="@string/ten"
                    android:background="@drawable/rounded_input_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_base"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dropdown công ty -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_basex4"
                    android:hint="@string/congty"
                    android:background="@drawable/rounded_input_box"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/actCongTy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_basex2"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dropdown giới tính -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_basex4"
                    android:hint="@string/gioitinh"
                    android:background="@drawable/rounded_input_box"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/actgioitinh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_basex2"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Di động -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_basex4"
                    android:hint="@string/didong"
                    android:background="@drawable/rounded_input_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtdidong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_base"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_basex4"
                    android:hint="@string/email"
                    android:background="@drawable/rounded_input_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_base"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

            <!-- Ngày sinh -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex4"
                android:hint="@string/ngaysinh"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Hàng chứa nút Lưu & Hủy luôn nằm dưới màn hình -->
    <LinearLayout
        android:id="@+id/rowbuttonhuyluu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/btnhuy"
            android:backgroundTint="@color/xamtrang"
            android:textColor="@color/chuxanh"
            android:textSize="@dimen/text_small"
            android:paddingVertical="8dp" />

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Lưu"
            android:backgroundTint="@color/xanhbutton"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            android:paddingVertical="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
