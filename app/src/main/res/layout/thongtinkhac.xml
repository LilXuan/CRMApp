<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- ScrollView chứa toàn bộ form -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rowbuttonhuyluu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header với nút back -->
            <LinearLayout
                android:id="@+id/taonguoilienhe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/taonguoilienhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taonguoilienhe"
                    android:textSize="@dimen/text_large"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Tab thông tin -->
            <LinearLayout
                android:id="@+id/tabThongTin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex2">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtin"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/grey"
                    android:paddingEnd="10dp" />

                <TextView
                    android:id="@+id/thongtinkhac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinkhac"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/blue"
                    android:background="@drawable/edittext_line"
                    android:layout_marginStart="54dp" />
            </LinearLayout>

            <!-- Thông tin địa chỉ -->

            <LinearLayout
                android:id="@+id/headerThongTinDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex4">

                <TextView
                    android:id="@+id/thongtindiachi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thongtindiachi"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_arrow_diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/black" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/contentThongTin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Các trường TextInput -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutttdiachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/diachi"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin_basex2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtdiachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top|start"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:paddingTop="@dimen/padding_vertical_small"
                    android:paddingBottom="@dimen/padding_vertical_small"
                    android:textSize="@dimen/text_small" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Các trường quận, tỉnh, quốc gia, mô tả, ghi chú ... -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutquanhuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/quan"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin_basex2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtquanhuyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:textSize="@dimen/text_small"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layouttinhtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tinh"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin_basex2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edttinhtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:textSize="@dimen/text_small"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutquocgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/quocgia"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin_basex2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtquocgia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:textSize="@dimen/text_small"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

            <!-- Mô tả -->
            <LinearLayout
                android:id="@+id/headerMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex4">

                <TextView
                    android:id="@+id/thongtinmota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thongtinmota"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_arrow_mota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentMota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutttmota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mota"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin_basex2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtmota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top|start"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:paddingTop="@dimen/padding_vertical_small"
                    android:paddingBottom="@dimen/padding_vertical_small"
                    android:textSize="@dimen/text_small"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ghi chú -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutghichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ghichu"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin_basex2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtghichu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top|start"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:paddingTop="@dimen/padding_vertical_small"
                    android:paddingBottom="@dimen/padding_vertical_small"
                    android:textSize="@dimen/text_small"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Thông tin quản lý -->
            <LinearLayout
                android:id="@+id/headerThongTinQuanLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex4">

                <TextView
                    android:id="@+id/thongtinquanly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thongtinquanly"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_arrow_quanly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/black" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/contentQuanLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutgiaocho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/giaocho"
                android:background="@drawable/rounded_input_box"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginTop="@dimen/margin_basex4">

                <AutoCompleteTextView
                    android:id="@+id/actgiaocho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Button Hủy và Lưu -->
    <LinearLayout
        android:id="@+id/rowbuttonhuyluu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/margin_basex4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/xamtrang"
            android:textColor="@color/chuxanh"
            android:text="@string/btnhuy"
            android:paddingVertical="8dp"
            android:textSize="@dimen/text_small"/>

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/xanhbutton"
            android:textColor="@android:color/white"
            android:text="Lưu"
            android:paddingVertical="8dp"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
