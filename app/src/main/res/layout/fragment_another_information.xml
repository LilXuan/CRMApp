<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    tools:context=".another_lead_information">

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_button">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Company information-->
            <LinearLayout
                android:id="@+id/common_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/company_infor"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/company_infor"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/add_company_infor"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="@null"
                        />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="@dimen/margin25"
                    android:background="@drawable/rounded_input_box"
                    android:textColorHint="@color/icon_infor">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tax_infor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tax_code"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:background="@android:color/transparent"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cl_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_information_small"
                    app:endIconTint="@color/icon_infor"
                    android:textColorHint="@color/icon_infor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_company"
                        android:textSize="14sp"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:background="@android:color/transparent"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="@string/job_infor"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:endIconMode="dropdown_menu"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/job_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:background="@android:color/transparent"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_dong"
                    android:textColorHint="@color/icon_infor">

                    <AutoCompleteTextView
                        android:id="@+id/revenue_infor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/revenue_infor"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:background="@android:color/transparent"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_of_employees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_employees"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:background="@android:color/transparent"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <EditText
                        android:id="@+id/company_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/company_description"
                        android:background="@android:color/transparent"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:minLines="6"
                        android:gravity="top|start"
                        android:autofillHints="name"
                        android:inputType="none"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <!--End Company Information-->

            <!-- Address information-->
            <LinearLayout
                android:id="@+id/common_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin20"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/address_infor"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/address_infor"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/add_address_infor"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="@null"
                        />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="@dimen/margin25"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:minLines="6"
                        android:gravity="top|start"
                        android:autofillHints="name"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <EditText
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/district"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/province"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <EditText
                        android:id="@+id/nation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nation"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <!--End address information-->

            <!-- description information-->
            <LinearLayout
                android:id="@+id/common_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/descriptive_infor"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/descrip_information"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/add_descriptive_infor"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="@null"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="@dimen/margin25"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/description"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:minLines="6"
                        android:gravity="top|start"
                        android:autofillHints="name"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/icon_infor">
                    <EditText
                        android:id="@+id/specal_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/special_notes"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:minLines="6"
                        android:gravity="top|start"
                        android:autofillHints="name"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--End description information-->

        <LinearLayout
            android:id="@+id/manager_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_manager_information"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/section_opportunity_management"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/iv_manager_information"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="@null"
                    />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="@dimen/margin25"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/hint_management"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu">
                <AutoCompleteTextView
                    android:id="@+id/tv_sendto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/label_evaluation"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu">
                <AutoCompleteTextView
                    android:id="@+id/tv_valuation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="15dp"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/abort_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/light_blue"
            android:text="@string/abort"
            android:textColor="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/save_button"
            app:layout_constraintHorizontal_weight="1"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/blue2"
            android:text="@string/save"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/abort_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>