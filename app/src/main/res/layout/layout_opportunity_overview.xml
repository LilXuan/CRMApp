<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_overview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/surface_white">

    <!-- Scheduled Activities Section -->
    <TextView
        android:id="@+id/tv_scheduled_activities_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_scheduled_activities"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <LinearLayout
        android:id="@+id/container_no_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_light">

        <TextView
            android:id="@+id/tv_no_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_no_activities"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tv_add_activities_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_add_activities"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_add_activity"
        android:layout_marginTop="8dp"
        android:background="@color/primary"
        android:textColor="@color/white" />

    <!-- Followers Section -->
    <TextView
        android:id="@+id/tv_followers_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_followers"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp" />

    <!-- Documents Section -->
    <TextView
        android:id="@+id/tv_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_documents"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp" />

    <!-- Document List -->
    <include
        layout="@layout/layout_document_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Document Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_select_document"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_select_document"
            android:layout_marginEnd="8dp"
            android:background="@color/gray_light"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn_add_document"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_add_document"
            android:layout_marginStart="8dp"
            android:background="@color/primary"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>