<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_sales_pipeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_sales_step_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/step_identify_decision_maker"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="6dp"
        android:background="@drawable/bg_step_inactive"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tv_sales_step_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/step_awareness_analysis"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="6dp"
        android:background="@drawable/bg_step_inactive"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tv_sales_step_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/step_proposal_quotation"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="6dp"
        android:background="@drawable/bg_step_inactive"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tv_sales_step_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/step_negotiation"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="6dp"
        android:background="@drawable/bg_step_active"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_sales_step_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/step_success"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="6dp"
        android:background="@drawable/bg_step_inactive"
        android:textColor="@color/text_secondary" />

</LinearLayout>