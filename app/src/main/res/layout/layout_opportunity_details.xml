<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/surface_white"
    android:visibility="gone">

    <!-- Opportunity Information Table -->
    <TextView
        android:id="@+id/tv_opportunity_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_opportunity_info"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <include
        layout="@layout/layout_management_info_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/tv_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_description_info"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_description_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:layout_marginTop="8dp"
        android:background="@color/gray_light"
        android:padding="12dp" />

    <!-- Management Information Table -->
    <TextView
        android:id="@+id/tv_management_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_management_info"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp" />

    <include
        layout="@layout/layout_management_info_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>