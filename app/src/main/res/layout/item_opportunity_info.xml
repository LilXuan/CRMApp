<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_opportunity_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/margin_basex2">
    <!-- Header section (title + collapse icon) -->
    <LinearLayout
        android:id="@+id/layout_section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_basex2"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_section_opportunity_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/section_opportunity_info"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_arrow_detail_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Ná»™i dung form -->
    <LinearLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Opportunity Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_opportunity_name"
            android:background="@drawable/rounded_input_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_opportunity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_company"
            app:endIconMode="dropdown_menu"
            android:background="@drawable/rounded_input_box">

            <AutoCompleteTextView
                android:id="@+id/et_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contact -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_contact"
            app:endIconMode="dropdown_menu"
            android:background="@drawable/rounded_input_box">

            <AutoCompleteTextView
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Value -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_value"
            android:background="@drawable/rounded_input_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sales Stage -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_sales_stage"
            app:endIconMode="dropdown_menu"
            android:background="@drawable/rounded_input_box">

            <AutoCompleteTextView
                android:id="@+id/sp_sales_stage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Success Rate -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_success_rate"
            app:endIconMode="dropdown_menu"
            android:background="@drawable/rounded_input_box">

            <AutoCompleteTextView
                android:id="@+id/sp_success_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Expected Close Date -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_expected_date"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar"
            android:background="@drawable/rounded_input_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_expected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Expected Close Date 2 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:hint="@string/hint_expected_date_2"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar"
            android:background="@drawable/rounded_input_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_expected_date_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex3"
            android:hint="@string/hint_description"
            android:background="@drawable/rounded_input_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- ðŸ”¹ ThÃ´ng tin quáº£n lÃ½ -->
    <!-- Header: tiÃªu Ä‘á» + icon collapse -->
    <LinearLayout
        android:id="@+id/layout_management_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_basex2"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_section_opportunity_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/section_opportunity_management"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_arrow_management_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"
            app:tint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_management_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_basex3"
            android:hint="@string/hint_management"
            android:background="@drawable/rounded_input_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_management"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>
